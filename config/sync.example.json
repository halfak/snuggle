{
	"synchronizers": [
		"sync_recent_changes",
		"sync_scores"
	],
	"sync_recent_changes": {
		"module": "snuggle.sync.synchronizers.RecentChanges",
		"model": "mongo_model",
		"source": "mysql_source",
		"loop_delay": 5,
		"changes_per_request": 100,
		"starting_rcid": 572229954,
		"max_age": 2592000
	},
	"sync_scores": {
		"module": "snuggle.sync.synchronizers.Scores",
		"model": "mongo_model",
		"source": "stiki_source",
		"loop_delay": 5,
		"scores_per_request": 100,
		"max_id_distance": 1000
	},
	"mongo_model": {
		"module": "snuggle.data.models.Mongo",
		"host": "localhost",
		"port": 27017,
		"database": "newbies_test"
	},
	"mysql_source": {
		"module": "snuggle.data.sources.MySQL",
		"host": "db1047.eqiad.wmnet",
		"user": "halfak",
		"db": "enwiki",
		"read_default_file": "/home/halfak/.my.cnf"
	},
	"stiki": {
		"uri": "http://armstrong.cis.upenn.edu/stiki_api.php",
		"headers": {
			"User-Agent": "Snuggle synchronizer (WP:Snuggle)"
		}
	},
	"mwapi": {
		"uri": "http://en.wikipedia.org/w/api.php",
		"headers": {
			"User-Agent": "Snuggle synchronizer (WP:Snuggle)"
		}
	}
}
